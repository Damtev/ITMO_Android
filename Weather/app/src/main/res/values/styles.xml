<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonTheme" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="InfoText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InfoTextTop" parent="InfoText">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="InfoTextLand" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InfoTextTopLand" parent="InfoText">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="WeekText" parent="InfoText">
        <item name="android:textSize">11sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="WeekTextLand" parent="InfoTextLand">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="WeekImage">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TopPanel">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="InfoPanel" parent="TopPanel">
        <item name="android:radius">25dp</item>
    </style>

</resources>
